     "output_type": "execute_result"
    }
   ],
   "source": [
    "cat_feats = []\n",
    "for i, col in enumerate(data.dtypes):\n",
    "    if np.issubdtype(col, np.integer) == False and np.issubdtype(col, np.floating) == False:\n",
    "        if data.columns[i] == 'y':\n",
    "            pass\n",
    "        else:\n",
    "            cat_feats.append(data.columns[i])\n",
    "\n",
    "cat_feats"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 10,
